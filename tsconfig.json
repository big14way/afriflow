{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["ES2020"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "outDir": "./dist"
  },
  "include": [
    "./hardhat.config.ts",
    "./scripts/**/*.ts",
    "./test/**/*.ts"
  ],
  "exclude": ["node_modules", "artifacts", "cache", "backend", "frontend"]
}
